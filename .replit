modules = ["nodejs-20", "python-3.12", "web"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Start application"

[[workflows.workflow]]
name = "Start application"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python server.py"
waitForPort = 5000

[[ports]]
localPort = 5000
externalPort = 80

[deployment]
deploymentTarget = "vm"
run = ["python", "server.py"]
build = ["bash", "-c", "cd '05_EXPORT/BRUCE_BRUCE__CODEX/harriswildlands.com github repo/harriswildlands.com-main' && npm run build"]

[userenv]

[userenv.production]
HOST = "0.0.0.0"
IDLE_MODE = "1"
MUD_BRUCE_AUTOPILOT = "true"
USE_CODEX = "0"
CODEX_DRYRUN = "1"

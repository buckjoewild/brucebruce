modules = ["nodejs-20", "python-3.12", "web"]
[agent]
expertMode = true
integrations = ["github:1.0.0"]

[nix]
channel = "stable-25_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Start application"

[[workflows.workflow]]
name = "Start application"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python server.py"
waitForPort = 5000

[[ports]]
localPort = 5000
externalPort = 80

[deployment]
deploymentTarget = "vm"
run = ["python", "server.py"]

[userenv]

[userenv.production]
HOST = "0.0.0.0"
IDLE_MODE = "1"
MUD_BRUCE_AUTOPILOT = "true"
USE_CODEX = "0"
CODEX_DRYRUN = "1"

[userenv.shared]
MUD_BOT_ENABLED = "false"
MUD_BOT_ALLOW_WHEN_ACTIVE = "0"
